<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!--눌린 상태가 현재 true-->
        <shape> <!--모양-->
            <solid android:color="#F8709E"/><!--색상-->
            <corners android:radius="50dp"/><!--테두리-->
        </shape>
    </item>

    <item android:state_pressed="false"> <!--눌린 상태가 현재 false-->
        <shape> <!--모양-->
            <solid android:color="#FF4081"/><!--색상-->
            <corners android:radius="50dp"/><!--테두리-->
        </shape>
    </item>

</selector>